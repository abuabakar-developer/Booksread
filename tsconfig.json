{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/pages/api/checkout/route.js", "src/pages/api/books.ts", "src/lib/mongodb.ts", "src/models/User.js", "src/components/LoginForm.js", "src/components/RegisterForm.js", "src/pages/api/auth/register.js", "src/pages/api/auth/login.js", "src/components/SignInModal.js", "src/components/navbar.tsx"],
  "exclude": ["node_modules"]
}
